<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:launchMode= "singleTask"
    tools:context="app.simone.GameActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/game_fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2" >

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/myGreen"
                android:textColor="@color/myMainTextColor"
                android:layout_weight="1"
                android:id="@+id/game_button1"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/myRed"
                android:textColor="@color/myMainTextColor"
                android:layout_weight="1"
                android:id="@+id/game_button2"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2" >

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/myBlue"
                android:textColor="@color/myMainTextColor"
                android:layout_weight="1"
                android:id="@+id/game_button3"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/myYellow"
                android:textColor="@color/myMainTextColor"
                android:layout_weight="1"
                android:id="@+id/game_button4"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/central_button"/>

</FrameLayout>